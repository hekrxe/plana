<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace 为当前Mapper文件指定唯一的命名空间-->
<mapper namespace="com.hekrxe.mybatis.ch1.dao.UserDAO">

    <select id="getUserById" parameterType="java.lang.Long" resultType="com.hekrxe.mybatis.ch1.model.User">
        SELECT * FROM `user` WHERE `id`=#{id}
    </select>

    <insert id="addUser" parameterType="com.hekrxe.mybatis.ch1.model.User">
        INSERT INTO `user`(`name`,`age`)
        VALUES (#{name},#{age})
    </insert>

    <update id="updateUser" parameterType="com.hekrxe.mybatis.ch1.model.User">
        UPDATE `user`
        SET `name`=#{name},`age`=#{age}
        WHERE `id`=#{id}
    </update>

    <select id="selectAll" resultType="com.hekrxe.mybatis.ch1.model.User">
        SELECT * FROM `user`
    </select>

</mapper>